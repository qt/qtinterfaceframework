{
    "module": "ifvehiclefunctions",
    "testDir": "../../config.tests",
    "depends": [
        "interfaceframework"
    ],

    "features": {
        "vehiclefunctions_simulation_backend" : {
            "label": "Simulation Backend",
            "condition": "features.ifvehiclefunctions",
            "output": [ "privateFeature" ]
        },
        "vehiclefunctions_qtro_backend" : {
            "label": "Qt Remote Objects Backend",
            "condition": "features.ifvehiclefunctions && features.remoteobjects",
            "output": [ "privateFeature" ]
        },
        "vehiclefunctions_qtro_simulation_server" : {
            "label": "Qt Remote Objects Simulation Server",
            "condition": "features.ifvehiclefunctions && features.remoteobjects",
            "output": [ "privateFeature" ]
        },
         "ifvehiclefunctions" : {
            "label": "Qt Interface Framework VehicleFunctions",
            "condition": "features.interfaceframework && features.ifcodegen",
            "output": [ "publicFeature" ]
        }
    },

    "report": [
        {
            "type": "warning",
            "condition": "!features.ifvehiclefunctions",
            "message": "Cannot build the Interface Framework VehicleFunctions module because its dependencies are not satisfied or it was disabled.
The Interface Framework VehicleFunctions module needs the Interface Framework Core module and the Interface Framework Generator."
        }
    ],

    "summary": [
        {
            "section": "Qt Interface Framework VehicleFunctions",
            "condition": "features.ifvehiclefunctions",
            "entries": [
                "vehiclefunctions_qtro_simulation_server",
                {
                    "section": "Backends",
                    "entries": [
                        "vehiclefunctions_simulation_backend",
                        "vehiclefunctions_qtro_backend"
                    ]
                }
            ]
        },
        {
            "type": "feature",
            "args": "ifvehiclefunctions",
            "condition": "!features.ifvehiclefunctions"
        }
    ]
}
